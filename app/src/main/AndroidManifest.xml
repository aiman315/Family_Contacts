<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aiman.familycontacts" >

    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".VerificationActivity"
            android:label="@string/title_activity_verification" >
        </activity>
        <activity
            android:name=".ContactAddActivity"
            android:label="@string/title_activity_contact_add" >
        </activity>
        <activity
            android:name=".ContactsListActivity"
            android:label="@string/title_activity_contacts_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".ContactsContentProvider"
            android:authorities="com.example.aiman.familycontacts.ContactsContentProvider"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <activity
            android:name=".ContactViewActivity"
            android:label="@string/title_activity_contact_view" >
        </activity>
    </application>

</manifest>
